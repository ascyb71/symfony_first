{% extends 'base.html.twig' %}

{% block title %}Connexion - StockMaster{% endblock %}

{# We hide the sidebar for the login page #}
{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Hide sidebar and navbar only for login page */
        #sidebar-wrapper, nav { display: none !important; }
        #wrapper { padding: 0; }

        /* Center everything */
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-box text-center">
    <div class="mb-4">
        <i class="fas fa-cubes fa-3x" style="color: #2c3e50;"></i>
        <h2 class="mt-3 fw-bold" style="color: #2c3e50;">StockMaster</h2>
        <p class="text-muted">Bienvenue, connectez-vous.</p>
    </div>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mb-3 text-start">
            <label for="inputEmail" class="form-label fw-bold text-secondary">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control form-control-lg" autocomplete="email" required autofocus placeholder="admin@stockmaster.com">
        </div>

        <div class="mb-4 text-start">
            <label for="inputPassword" class="form-label fw-bold text-secondary">Mot de passe</label>
            <input type="password" name="_password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required placeholder="******">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary w-100 py-3 fw-bold rounded-3 shadow-sm" type="submit">
            SE CONNECTER
        </button>
    </form>
</div>
{% endblock %}
