{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>DÃ©tails du Produit</h1>

        <div class="shadow-box p-4 bg-white mt-4" style="border-radius: 15px;">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ product.title }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ product.price }} MAD</td>
                    </tr>
                    </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <div>
                <a href="{{ path('app_product_index') }}" class="btn btn-secondary me-2">Retour</a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Modifier</a>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                {{ include('product/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
