{% extends 'base.html.twig' %}

{% block title %}DÃ©tails Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-3">
                    {% if product.image %}
                        <img src="{{ asset('images/' ~ product.image) }}" class="img-fluid rounded shadow" alt="{{ product.title }}" style="max-height: 300px;">
                    {% else %}
                        <div class="text-muted"><i class="fas fa-image fa-3x"></i><br>Pas d'image</div>
                    {% endif %}
                </div>

                <div class="col-md-8">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <h2 class="card-title fw-bold text-primary">{{ product.title }}</h2>
                            <span class="badge bg-info fs-6">{{ product.category }}</span>
                        </div>

                        <h3 class="text-success mt-3 fw-bold">{{ product.price }} DH</h3>

                        <p class="card-text mt-4 fs-5">
                            {{ product.description|default('Aucune description disponible.') }}
                        </p>

                        <hr class="my-4">

                        <div class="d-flex gap-2">
                            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning text-white">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            {{ include('product/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
