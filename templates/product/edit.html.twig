{% extends 'base.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title mb-0"><i class="fas fa-edit me-2"></i>Modifier : {{ product.title }}</h3>
                </div>
                <div class="card-body bg-light">

                    {# 1. FORMULAIRE DE MODIFICATION #}
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Titre</label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Prix</label>
                                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Catégorie</label>
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Image</label>
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour
                            </a>
                            <button class="btn btn-warning text-white">
                                <i class="fas fa-check me-1"></i> Mettre à jour
                            </button>
                        </div>
                    {{ form_end(form) }}
                    {# ⚠️ LE FORMULAIRE FINIT ICI. ON NE MET RIEN D'AUTRE DEDANS #}

                    {# 2. BOUTON SUPPRIMER (SORTI DU FORMULAIRE + SÉCURISÉ) #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="mt-4 text-end border-top pt-3">
                             <p class="text-danger small mb-1"><i class="fas fa-lock"></i> Zone Admin</p>
                             {{ include('product/_delete_form.html.twig') }}
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
