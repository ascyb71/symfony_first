{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0"><i class="fas fa-plus-circle me-2"></i>Ajouter un Produit</h3>
                </div>
                <div class="card-body bg-light">
                    {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="mb-3">
                            <label class="form-label fw-bold">Titre du produit</label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: iPhone 15'}}) }}
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Prix (MAD)</label>
                                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 1200'}}) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Stock</label>
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 50'}}) }}
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Cat√©gorie</label>
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Image (Nom du fichier)</label>
                            {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Ex: pc.jpg'}}) }}
                            <div class="form-text">Placez votre image dans le dossier <code>public/images</code></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('app_product_index') }}" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i> Retour
                            </a>
                            <button class="btn btn-success text-white">
                                <i class="fas fa-save me-1"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
