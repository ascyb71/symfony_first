{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Catégorie</h1>

        <div class="shadow-box p-4 bg-white mt-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ category.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <div>
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary me-2">Retour</a>
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                {{ include('category/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
