{% extends 'base.html.twig' %}

{% block title %}Mes Catégories{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 style="font-weight: 800; color: #2c3e50;">Catégories</h1>
            <p class="text-muted">Gérez les rayons de votre stock</p>
        </div>

        <a href="{{ path('app_category_new') }}" class="btn btn-primary shadow-sm" style="border-radius: 50px; padding: 10px 25px; font-weight: 600;">
            <i class="fas fa-plus me-2"></i> Nouvelle Catégorie
        </a>
    </div>

    <div class="shadow-box" style="background: white; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); padding: 30px;">
        <table class="table table-hover align-middle custom-table">
            <thead>
                <tr style="border-bottom: 2px solid #f0f2f5;">
                    <th style="color: #a4b0be; font-weight: 600; text-transform: uppercase; font-size: 0.85rem;">ID</th>
                    <th style="color: #a4b0be; font-weight: 600; text-transform: uppercase; font-size: 0.85rem;">Nom de la catégorie</th>
                    <th style="text-align: right; color: #a4b0be; font-weight: 600; text-transform: uppercase; font-size: 0.85rem;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td style="color: #b2bec3; font-weight: bold;">#{{ category.id }}</td>

                        <td>
                            <span style="font-weight: 700; color: #2d3436; font-size: 1.1rem;">
                                {{ category.name }}
                            </span>
                        </td>

                        <td class="text-end">
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-light text-primary rounded-circle" style="width: 35px; height: 35px; line-height: 25px;" title="Modifier">
                                <i class="fas fa-pen"></i>
                            </a>

                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-light text-info rounded-circle ms-1" style="width: 35px; height: 35px; line-height: 25px;" title="Voir">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-5">
                            <div class="text-muted">
                                <i class="fas fa-box-open fa-3x mb-3" style="color: #dfe6e9;"></i>
                                <p>Aucune catégorie trouvée.</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
